<scroll-view class="cnt" scroll-y><view class="news-title">{{title}}</view><view class="news-info"><view class="news-source">{{source}}</view><view class="news-time">{{date}}</view><view class="news-read">{{"阅读 "+readCount}}</view></view><view class="news-content"><block wx:for="{{content}}" wx:for-item="item" wx:for-index="id" wx:key="id"><view><block wx:if="{{item.type==='p'||item.type==='strong'}}"><view class="{{[item.type]}}">{{item.text}}</view></block><block wx:else><block wx:if="{{item.type==='image'}}"><image class="img" src="{{item.src}}" mode="aspectFit"></image></block></block></view></block></view></scroll-view>